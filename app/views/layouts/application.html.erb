<!DOCTYPE html>
<html>
  <head>
    <title>EVEContactSync</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="container">
      <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
          <%= yield %>
        </div>
        <div class="col-sm-2"></div>
      </div>
    </div>
  </body>
</html>
